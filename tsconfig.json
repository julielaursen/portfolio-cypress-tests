{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es6", "dom"],
    "types": ["cypress", "node"],
    "strict": false,
    "esModuleInterop": true,
    "isolatedModules": false,
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": [
    "cypress",
    "./*/*.ts",
    "cypress.config.ts",
    "cypress/**/*.ts",
    "cypress/support/cypress.d.ts"
  ],
  "exclude": [
    "node_modules",
    "cypress/support/commands.ts",
    "cypress/support/cypress.d.ts"
  ]
}
